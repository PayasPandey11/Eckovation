doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/index.css')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
  body
    block content
      h1 Eckovation

      // register form

      div#signup-div
        h3 Signup
        form(method='POST' action='/')

          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='first and last' name='username')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='passwordConf')
          button.btn.btn-primary(type='submit') Sign up


      div#login-div
        h3 Log-in
        form(method='POST' action='/')

          div.form-group
            label(for='logemail') Email:
            input#logemail.form-control(type='email', placeholder='name@email.com' name='logemail')
          div.form-group
            label(for='logpw') Password:
            input#logpw.form-control(type='password' name='logpassword')
          button.btn.btn-primary(type='submit') Sign up

      if status
        p.error #{text}
